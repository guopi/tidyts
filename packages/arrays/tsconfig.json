{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "outDir": "out",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
